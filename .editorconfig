# Root EditorConfig File
root = true

# Apply to all files
[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

# Apply to JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = tab
quote_type = single
insert_final_newline = true

# Markdown and YAML files
[*.{md,yml,yaml}]
indent_style = tab
trim_trailing_whitespace = false

# Override for JSON files
[*.json]
quote_type = double