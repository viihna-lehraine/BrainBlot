# Root EditorConfig File
root = true

# Apply to all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

# Apply to JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
insert_final_newline = true

# Markdown and YAML files
[*.{md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Override for JSON files (typically double quotes are used)
[*.json]
quote_type = double