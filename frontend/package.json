{
  "name": "brainblot-frontend",
  "version": "1.0.0",
  "author": "Viihna Lehraine",
  "description": "Free, customizable personal guestbook",
  "main": "public/app.js",
  "type": "module",
  "scripts": {
    "postBuild": "node ./config/postBuild.mjs",
    "build": "webpack --config webpack.prod.js",
    "clean": "rimraf ./public/js/*",
    "clean:node": "rimraf ./node_modules && rm package-lock.json",
    "compile": "npm run clean && npm run compile:ts && npm run postBuild && npm run lint",
    "compile:ts": "tsc --target ES2022 --project ./tsconfig.json",
    "dev": "vite",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint --fix .",
    "sass": "sass public/scss/main.scss:public/css/main.css",
    "sass:watch": "sass --watch public/scss:public/css",
		"sass:clean": "rm public/scss/*.css public/scss/*.map",
    "start": "webpack serve --config webpack.dev.js --open",
    "start:vite": "vite"
  },
  "keywords": [],
  "license": "GNU GPLv3",
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "cookie": "^0.7.2",
    "core-js": "^3.38.1",
    "express": "^4.21.0",
    "express-validator": "^7.1.0",
    "html-webpack-plugin": "^5.6.0",
    "install": "^0.13.0",
    "sass": "^1.77.8",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.25.7",
    "@babel/preset-env": "^7.25.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.4.0",
    "@types/zxcvbn": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "babel-loader": "^9.1.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "esm": "^3.2.25",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
