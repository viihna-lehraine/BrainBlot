{
  "name": "guestbook-frontend",
  "version": "1.0.0",
  "author": "Viihna Lehraine",
  "description": "Free, customizable personal Guestbook",
  "main": "public/app.js",
  "type": "module",
  "scripts": {
    "addJsFileExt": "node ./config/ts/postBuild.mjs",
    "build:webpack": "webpack serve --mode development",
    "clean": "rimraf ./public/js/*",
    "compile": "npm run compile-p1 && npm run compile-p2 && npm run addJsFileExt",
    "compile-p1": "npm run clean && tsc --target ES6 --outDir ./public/js",
    "compile-p2": "npx tsc --project tsconfig.json",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint .",
    "sass": "sass public/scss/main.scss public/css/main.css",
    "sass:watch": "sass --watch public/scss:public/css",
    "start": "webpack serve --mode development"
  },
  "keywords": [],
  "license": "GNU GPLv3",
  "dependencies": {
    "chokidar": "^3.6.0",
    "eslint": "^9.9.0",
    "express-validator": "^7.1.0",
    "glob": "^11.0.0",
    "sass": "^1.77.8",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "@types/zxcvbn": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "esm": "^3.2.25",
    "gulp": "^5.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
