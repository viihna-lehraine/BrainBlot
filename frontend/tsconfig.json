{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./public/js",
    "resolveJsonModule": true,
    "rootDir": "./public/ts",
    "skipLibCheck": true,
    "target": "ES2020",
    "strict": true
  },
  "include": ["./public/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
