{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "./public/js",
    "resolveJsonModule": true,
    "rootDir": "./public/ts",
    "skipLibCheck": true,
    "target": "ES2022",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./public/types"
    ]
  },
  "include": [
    "./public/ts/**/*.ts",
		"./public/types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules",
  ]
}
