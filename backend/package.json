  "author": "Viihna Lehraine",
  "description": "Free, customizable personal Guestbook",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "backup:src": "node ./config/srcBackup.js",
    "build": "npm run lint:ts && npm run format:ts && npm run backup:src && npm run clean:src && npm run tsc && npm run postCompile && npm run lint:js && npm run format:js",
		"build:verbose": "npm run lint:ts && npm run format:ts && npm run backup:src && npm run clean:src && npm run tsc:verbose && npm run postCompile && npm run lint:js && npm run format:js",
    "circular": "madge --circlular ./src",
    "clean:src": "find ./src -type f -name '*.js' -delete && rm -f tsconfig.tsbuildinfo",
    "format": "prettier --write './src/**/*.js' './ts/**/*.ts'",
    "format:js": "prettier --write './src/**/*.js'",
    "format:ts": "prettier --write './ts/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.js' && eslint --fix 'ts/**/*.ts'",
    "lint:js": "eslint --fix 'src/**/*.js'",
    "lint:ts": "eslint --fix 'ts/**/*.ts'",
    "lint-and-format": "npm run lint && npm run format",
    "postCompile": "node ./config/postCompile.mjs",
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "start:dev:log": "nodemon src/server.js 2>&1 | tee logs/npm/npm-debug.log",
    "tsc": "tsc --project tsconfig.json",
    "tsc:full": "npm run tsc && npm run postCompile",
    "tsc:verbose": "tsc --project tsconfig.json --verbose",
		"test": "mocha --experimental-specifier-resolution=node",
    "watch:all": "npm-run-all --parallel watch:lint watch:format watch:tsc",
    "watch:format": "npm-run-all --parallel watch:format:ts watch:format:js",
    "watch:lint": "npm-run-all --parallel watch:lint:ts watch:lint:js",
    "watch:format:js": "chokidar 'src/**/*.js' -c 'npm run format:js'",
    "watch:format:ts": "chokidar 'ts/**/*.ts' -c 'npm run format:ts'",
    "watch:lint:js": "chokidar 'src/**/*.js' -c 'npm run lint:js'",
    "watch:lint:ts": "chokidar 'ts/**/*.ts' -c 'npm run lint:ts'",
    "watch:tsc": "tsc --watch --project tsconfig.json"
  },
